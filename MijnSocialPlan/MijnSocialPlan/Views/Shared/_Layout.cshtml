<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MijnSocialPlan.nl</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--@Html.ActionLink("MijnSocialPlan.nl", "Index", "Home", null, new { @class = "navbar-brand" })-->
                <a class="navbar-brand" href="~/">
                    &nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-thumbs-up"></span>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="download">Mijn Social Plannen <span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="download">
                            @Html.Action("GetUserSocialPlannenMenu", "SocialPlan")
                            <li class="divider"></li>
                            <li>
                                <a href="~/SocialPlan/Create"><span class="glyphicon glyphicon-plus"></span> Nieuw plan maken</a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="download">Handleiding<span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="download">
                            <li>@Html.ActionLink("Handleiding Index", "Index", "Handleiding")</li>
                            <li>@Html.ActionLink("Facebook zakelijk account aanmaken", "FacebookZakelijkAccount", "Handleiding")</li>
                            <li>@Html.ActionLink("Twitter zakelijk account aanmaken", "TwitterZakelijkAccount", "Handleiding")</li>
                            <li>@Html.ActionLink("Kort maar krachtig: wat kan je met Social Media?", "InfoSocialMedia", "Handleiding")</li>
                            <li>@Html.ActionLink("Hoe werkt Facebook?", "HoeWerktFacebook", "Handleiding")</li>
                            <li>@Html.ActionLink("Hoe werkt Twitter?", "HoeWerktTwitter", "Handleiding")</li>
                            <li>@Html.ActionLink("Help! Ik ben niet zo goed in schrijven", "HulpMetSchrijven", "Handleiding")</li>
                            <li>@Html.ActionLink("Posts, tweets… Tips & Tricks!", "TipsEnTricks", "Handleiding")</li>
                            <li>@Html.ActionLink("Posten op Facebook", "PostenOpFacebook", "Handleiding")</li>
                            <li>@Html.ActionLink("Tweeten op Twitter", "TweetenOpTwitter", "Handleiding")</li>
                            <li>@Html.ActionLink("Social contentstrategie", "SocialContentStrategie", "Handleiding")</li>
                        </ul>
                    </li>
                    
                    <li>@Html.ActionLink("Info", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        
        <footer class="col-lg-12">
            <hr />
            <p>&copy; @DateTime.Now.Year - Prototype - Elyse Teerink</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="http://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/socialplanforms")
    @RenderSection("scripts", required: false)
</body>
</html>
